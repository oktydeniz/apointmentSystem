        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_200</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/dark_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_open_700</item>
        <item name="colorSecondaryVariant">@color/green_open_200</item>
        <item name="colorOnSecondary">@color/dark_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/firasans_italic</item>
    </style>
